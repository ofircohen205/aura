FROM python:3.13-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /bin/uv

# Install Node.js (for TypeScript/JavaScript tools)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs

# Install Just (command runner)
RUN curl --proto '=https' --tlsv1.2 -sSf https://just.systems/install.sh | bash -s -- --to /usr/local/bin

# Copy configuration files for dependency installation
COPY pyproject.toml uv.lock ./
COPY apps/backend/pyproject.toml apps/backend/
COPY libs/core-py/pyproject.toml libs/core-py/
COPY clients/cli/pyproject.toml clients/cli/

# Copy package.json files for Node.js dependencies
COPY package.json package-lock.json* ./
COPY apps/web-dashboard/package.json apps/web-dashboard/

# Install Python dependencies
RUN uv sync --frozen

# Install Node.js dependencies
RUN cd apps/web-dashboard && npm install

# Set up environment
ENV PATH="/app/.venv/bin:/usr/local/bin:$PATH"
ENV PYTHONPATH="/app/libs/core-py/src:/app/apps/backend/src:$PYTHONPATH"

# Install pre-commit
RUN uv pip install pre-commit

# Default command
CMD ["/bin/bash"]
