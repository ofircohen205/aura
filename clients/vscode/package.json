{
  "name": "vscode-extension",
  "displayName": "Aura Guardian",
  "version": "0.0.1",
  "publisher": "aura",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aura.showLesson",
        "title": "Aura: Show lesson"
      },
      {
        "command": "aura.dismissLesson",
        "title": "Aura: Dismiss lesson"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aura-sidebar",
          "title": "Aura Guardian",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "aura-sidebar": [
        {
          "id": "aura.lessonPanel",
          "name": "Aura Lessons"
        }
      ]
    },
    "configuration": {
      "title": "Aura Guardian",
      "properties": {
        "aura.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Aura struggle detection"
        },
        "aura.baseUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Aura backend base URL (http/https)"
        },
        "aura.windowMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 0.1,
          "description": "Struggle detection window in minutes (production/default)"
        },
        "aura.devWindowSeconds": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "description": "Struggle detection window in seconds when running the extension in Development mode"
        },
        "aura.retryAttemptThreshold": {
          "type": "number",
          "default": 3,
          "minimum": 2,
          "description": "Number of similar edit attempts required to trigger a struggle signal"
        },
        "aura.cooldownMinutes": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "Cooldown between repeated struggle triggers"
        },
        "aura.maxSnippetChars": {
          "type": "number",
          "default": 300,
          "minimum": 50,
          "description": "Maximum number of characters to capture for a snippet around the edit location"
        },
        "aura.showCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens actions for the latest lesson"
        },
        "aura.showHover": {
          "type": "boolean",
          "default": true,
          "description": "Show hover tooltip excerpt near the struggle location"
        },
        "aura.sendCodeSnippet": {
          "type": "boolean",
          "default": true,
          "description": "Send a small code snippet to the backend for better recommendations"
        },
        "aura.sendFilePath": {
          "type": "boolean",
          "default": false,
          "description": "Send the local file path to the backend (may reveal sensitive paths)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'ESLint not configured yet'",
    "package": "vsce package --out aura-guardian.vsix",
    "test": "npm run compile && if [ -f ./node_modules/@vscode/test-electron/out/runTest.js ]; then node ./node_modules/@vscode/test-electron/out/runTest.js; else echo 'Test runner not available, skipping tests'; fi"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@types/ws": "^8.5.5",
    "@vscode/test-electron": "^2.3.0",
    "mocha": "^11.7.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ws": "^8.13.0"
  }
}
